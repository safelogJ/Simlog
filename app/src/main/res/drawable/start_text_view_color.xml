<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item>
        <shape>
            <solid android:color="@color/aluminum_tran"/> <!-- Тень, полу-прозрачный черный -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Основной фон -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="@color/no_data" />
            <stroke android:width="1dp" android:color="#66000000" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>